generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model credentials {
  id            String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username      String @unique
  password_hash String
}

model experiences {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  role        String
  description String?
  corporation String
  location    String
  start_date  DateTime  @db.Date
  end_date    DateTime? @db.Date
  created_at  DateTime  @default(now()) @db.Timestamptz(6)

  @@index([start_date(sort: Desc)], map: "idx_experiences_start_date")
}

model messages {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sender_name  String
  sender_email String
  body         String
  is_read      Boolean  @default(false)
  created_at   DateTime @default(now()) @db.Timestamptz(6)

  @@index([created_at(sort: Desc)], map: "idx_messages_created_at")
  @@index([is_read], map: "idx_messages_is_read")
}

model project_images {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  project_id String   @db.Uuid
  image      String
  projects   projects @relation(fields: [project_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_project")
}

model projects {
  id             String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  description    String?
  project_date   DateTime         @db.Date
  created_at     DateTime         @default(now()) @db.Timestamptz(6)
  github_link    String?
  project_images project_images[]

  @@index([project_date(sort: Desc)], map: "idx_projects_project_date")
}

model resume {
  id            String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  file_url      String
  created_at    DateTime        @default(now()) @db.Timestamptz(6)
  resume_images resume_images[]
}

model resume_images {
  id         String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  resume_id  String @db.Uuid
  image_url  String
  sort_order Int    @default(0)
  resume     resume @relation(fields: [resume_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_resume")
}

model user_info {
  id          String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  full_name   String @default("")
  titles      String @default("") @unique
  about_title String @default("")
  about_desc  String @default("")
  email       String @default("")
}
